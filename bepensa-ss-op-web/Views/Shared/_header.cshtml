@inject IAccessSession Sesion
@inject IEdoCta EdoCta

@{
    var area = ViewContext.RouteData.Values["area"]?.ToString();
    var controller = ViewContext.ActionDescriptor.RouteValues["controller"];
    var method = ViewContext.ActionDescriptor.RouteValues["action"];

    var estadoCuenta = await EdoCta.SaldoActual(Sesion.UsuarioActual.Id);

    int saldo = estadoCuenta.Data;

    string nombreCompleto = Sesion.UsuarioActual.Nombre + " " + Sesion.UsuarioActual.ApellidoPaterno + " " + (Sesion.UsuarioActual.ApellidoMaterno != null ? " " + Sesion.UsuarioActual.ApellidoMaterno : "");

    // string ultimaActualizacion = (Sesion.UsuarioActual.UltimaActualizacion != null &&
    //                                 Sesion.UsuarioActual.UltimaActualizacion != default) ?
    //                                     Sesion.UsuarioActual.UltimaActualizacion.Value.ToString("dd/MM/yyy") :
    //                                     "Sin actualizaciones";
}
<header>
    <div class="barra-control">
        <a asp-action="Index" asp-controller="Home" asp-area="Socio">
            <img src="~/img/general/logo-ss-pleca.svg" class="d-lg-flex d-md-flex d-none" alt="" srcset="">
        </a>
        <div class="ms-auto me-5 center-flex">
            @if (Sesion.FuerzaVenta == null)
            {
                <a asp-action="Index" asp-controller="Carrito" asp-area="Socio" class="position-relative">
                    <img src="~/img/app/icn-carrito-header.png" style="max-width: 32px; max-height: 32px;" class="z-index-3" alt="" srcset="">
                    <span id="icnCarrito" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        0
                        <span class="visually-hidden">unread messages</span>
                    </span>
                </a>
            }

            <div class="vr bg-white mx-1 opacity-100"></div>
            <a asp-action="MiCuenta" asp-controller="Home" asp-area="Socio" class="text-white font-12px d-lg-flex d-md-none d-none">Mi Cuenta</a>
        </div>
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            if (Sesion.FuerzaVenta == null)
            {
                <a class="btn btn-outline-secondary rounded-pill px-2 font-12px d-lg-block d-md-none d-none" asp-action="Logout" asp-controller="Cuentas" asp-area="Autenticacion">Cerrar sesión</a>
            }
            else
            {
                <a class="btn btn-outline-secondary rounded-pill px-2 font-12px d-lg-block d-md-none d-none" asp-area="FuerzaVenta" asp-controller="Home" asp-action="Index">Regresar</a>
            }
        }
    </div>

    <div class="barra-menu">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100">
            <div class="container-fluid p-0">
                <!-- <a class="navbar-brand" href="#">Navbar</a> -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <!-- <span class="navbar-toggler-icon"></span> -->
                    <img src="~/img/home/icn-menu@2x.png" alt="" srcset="">
                </button>
                <div class="collapse navbar-collapse flex-column" id="navbarNavDropdown">
                    <div class="barra-datos-md">
                        <div class="item">
                            Información de ventas actualizada al:
                            @if (Sesion.UsuarioActual.FechaVenta != null)
                            {
                                <b>@Sesion.UsuarioActual.FechaVenta?.ToString("dd/MM/yyyy")</b>
                            }
                            else
                            {
                                <b>No disponible</b>
                            }
                        </div>
                        <div class="item">Saldo actual: <b>@saldo.ToString("N0")  pts</b></div>
                        <div class="item">Miscelánea: @Sesion.UsuarioActual.RazonSocial</div>
                        <div class="item">Nombre: <b>@nombreCompleto</b></div>
                    </div>
                    <div class="barra-logo">
                        <a asp-action="Index" asp-controller="Home" asp-area="Socio">
                            <img src="~/img/logo-SS-horizontal.svg" class="ms-3" height="30" alt="" srcset="">
                        </a>
                    </div>
                    <ul class="navbar-nav" id="myTab" role="tablist">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @( controller == "Objetivos" ? "active" : "" )" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="@( controller == "Objetivos" ? "true" : "false" )">
                                Objetivos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <li><a class="dropdown-item @( method == "MetaCompra" ? "active" : "" )" asp-action="MetaCompra" asp-controller="Objetivos" asp-area="Socio"><span>Meta de compra</span></a></li>

                                <li><a class="dropdown-item @( method == "PortafolioPrioritario" ? "active" : "" )" asp-action="PortafolioPrioritario" asp-controller="Objetivos" asp-area="Socio"><span>Portafolio prioritario</span></a></li>

                                <li><a class="dropdown-item @( method == "Ejecucion" ? "active" : "" )" asp-action="Ejecucion" asp-controller="Objetivos" asp-area="Socio"><span>Ejecución de mercadeo</span></a></li>

                                <li><a class="dropdown-item @( method == "CumplimientoEnfriador" ? "active" : "" )" asp-action="CumplimientoEnfriador" asp-controller="Objetivos" asp-area="Socio"><span>Cumplimiento del enfriador</span></a></li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @( controller == "Mecanica" ? "active" : "" )" aria-current="page" asp-action="MetaCompra" asp-controller="Mecanica" asp-area="Mecanica">Mecánica</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @( controller == "EstadoCuenta" ? "active" : "" )" asp-action="Index" asp-controller="EstadoCuenta" asp-area="Socio">Estado de cuenta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  @( controller == "Premios" ? "active" : "" )" asp-action="Index" asp-controller="Premios" asp-area="Socio">Catálogo de canje</a>
                        </li>
                        <li class="nav-item">
                            <a href="https://alianzas.lms-la.com/paso.php?tK=YFU3YNZkQF4NbdW1ZCkoGE8stBRk7rcUwwMK9muOrocHHy9g0iK7mHoVJ55FmWZY&IdC=999999606&Mn=11" class="nav-link" target="_blank">Alianzas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="barra-datos">
        <div class="container h-100">
            <div class="row align-items-center justify-content-between text-center h-100">
                <div class="col-md-auto">
                    Información de ventas actualizada al:
                    @if (Sesion.UsuarioActual.FechaVenta != null)
                    {
                        <b>@Sesion.UsuarioActual.FechaVenta?.ToString("dd/MM/yyyy")</b>
                    }
                    else
                    {
                        <b>No disponible</b>
                    }
                </div>
                <div class="col-md-auto">Saldo actual: <b>@saldo.ToString("N0")  pts</b></div>
                <div class="col-md-auto">Miscelánea: @Sesion.UsuarioActual.RazonSocial</div>
                <div class="col-md-auto">Nombre: <b>@nombreCompleto</b></div>
            </div>
        </div>
    </div>
</header>