@model List<EjecucionDTO>
@{
    ViewData["Title"] = "Ejecución de mercadeo";
}

@section GoogleAnalytics
{
    <partial name="_googleAnalitycs" />
}

<main>
    <div class="container">
        <div class="row align-items-center justify-content-center py-1">

            <div class="col-lg-12">
                <div class="title m-0 p-0">Ejecución de mercadeo</div>
            </div>

        </div>
    </div>
    <div class="container">
        <div class="row g-3">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped text-center bg-white align-middle font-13px">
                        <thead>
                            <tr class="bg-gris text-white">
                                <th scope="col" class="font-13px text-white">Concepto</th>
                                <th scope="col" class="font-13px text-white">Mes</th>
                                <th scope="col" class="font-13px text-white">Estatus de evaluación</th>
                                <th scope="col" class="font-13px text-white">Calificación</th>
                                <th scope="col" class="font-13px text-white">Puntos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Count > 0)
                            {
                                int controller = 0;

                                @foreach (var ejec in Model)
                                {
                                    <tr>
                                        @if (controller == 0)
                                        {
                                            <td rowspan="@Model.Count" class="bg-white p-2">
                                                <div class="icn-ejecucion">
                                                    <img src="~/img/general/icn-ejecuciondemercadeo.svg" alt="">
                                                </div>
                                            </td>
                                        }
                                        <td>@ejec.Mes</td>
                                        <td>@ejec.EstatusEvaluacion</td>
                                        <td>@ejec.Resultado</td>
                                        <td>@ejec.Puntos.ToString("N0")</td>
                                    </tr>

                                    controller++;
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5">No hay información para mostrar</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>