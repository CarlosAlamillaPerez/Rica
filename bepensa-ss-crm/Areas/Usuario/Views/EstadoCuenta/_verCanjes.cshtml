@model List<DetalleCanjeDTO>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Folio</th>
                <th>Fecha de canje</th>
                <th>Puntos</th>
                <th>Premio</th>
                <th>Estatus</th>
                <th>¿Quién recibe?</th>
                <th>Detalle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var canje in Model)
                {
                    <tr class="numCanjes">
                        <td>@canje.Folio</td>
                        <td>@canje.FechaCanje.ToString("dd/MM/yyyy")</td>
                        <td>@canje.Puntos.ToString("N0")</td>
                        <td class="text-wrap" style="white-space: normal;">@canje.Premio</td>
                        <td class="text-center">
                            @if (canje.IdEstatusRedencion == (int)TipoEstatusRedencion.Solicitado)
                            {
                                <span class="badge rounded-pill badge-warning text-dark">Solicitado</span>
                            }
                            else if (canje.IdEstatusRedencion == (int)TipoEstatusRedencion.EnProceso)
                            {
                                <span class="badge rounded-pill badge-success">En proceso</span>
                            }
                            else if (canje.IdEstatusRedencion == (int)TipoEstatusRedencion.Entregado)
                            {
                                <span class="badge rounded-pill badge-light text-dark">Entragado</span>
                            }
                            else if (canje.IdEstatusRedencion == (int)TipoEstatusRedencion.Cancelado)
                            {
                                <span class="badge rounded-pill badge-danger">Cancelado</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill badge-info">Estatus desconocido</span>
                            }
                        </td>
                        <td>@canje.Solicitante</td>
                        <td><button class="btn border-0 btn-ver-mas" data-canje="@canje.Id"><img src="~/img/general/icn-vermas.svg"></button></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7">SIN CANJES</td>
                </tr>
            }
        <tbody>
    </table>
</div>

<div class="col-12 mt-3">
    <p class="text-center">Mostrando registros del <b class="text-primary">@(Model.Count > 0 ? "1" : "0") al @Model.Count</b> de un total de <b class="text-primary">@Model.Count</b></p>
</div>

