@model List<LlamadaDTO>

@{
    ViewData["Title"] = "Historico de llamadas";
}

<div class="page-body">
    <div class="container-fluid">
        <div class="page-title">
            <div class="row">
                <div class="col-6">
                    <h3>Buscar socio</h3>
                </div>
                <div class="col-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Inicios" asp-area="Home">
                                <svg class="stroke-icon">
                                    <use href="/assets/svg/icon-sprite.svg#stroke-home"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Socios</li>
                        <li class="breadcrumb-item active">Buscar</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 project-list">
                <div class="card">
                    <div class="card-header">
                        <partial name="_menuPrincipal" />
                        <div class="row">
                            <div class="col-12">
                                <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Llamadas" asp-area="Usuario">Captura de Llamada</a>
                                <a class="btn btn-primary" asp-action="Historico" asp-controller="Llamadas" asp-area="Usuario">Hístorico de Llamadas</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>Folio</th>
                                            <th>Fecha Captura</th>
                                            <th>Descripción</th>
                                            <th>Usuario Captura</th>
                                            <th>Fecha Último Comentario</th>
                                            <th>Último comentario</th>
                                            <th>Usuario Último comentario</th>
                                            <th>Tipo de Llamada</th>
                                            <th>Motivo</th>
                                            <th>Estatus</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count > 0)
                                        {
                                            foreach (var modelo in Model)
                                            {
                                                <tr role="row" class="odd">
                                                    <td>@modelo.Id</td>
                                                    <td>@modelo.FechaReg.ToString("dd/MM/yyyy")</td>
                                                    <td>@modelo.Tema</td>
                                                    <td>@modelo.OperadorReg.Nombre</td>
                                                    <td>
                                                        @if (modelo.Llamadas != null && modelo.Llamadas.Count > 0)
                                                        {
                                                            @modelo.Llamadas.OrderByDescending(x => x.Id).Select(x => x.FechaReg).FirstOrDefault().ToString("dd/MM/yyyy")
                                                        }
                                                        else
                                                        {
                                                            @modelo.FechaReg.ToString("dd/MM/yyyy")
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (modelo.Llamadas != null && modelo.Llamadas.Count > 0)
                                                        {
                                                            @modelo.Llamadas.OrderByDescending(x => x.Id).Select(x => x.Comentario).FirstOrDefault()
                                                        }
                                                        else
                                                        {
                                                            @modelo.Comentario
                                                        }
                                                    </td>
                                                    <td>
                                                        @if (modelo.Llamadas != null && modelo.Llamadas.Count > 0)
                                                        {
                                                            @modelo.Llamadas.OrderByDescending(x => x.Id).Select(x => x.OperadorReg.Nombre).FirstOrDefault()
                                                        }
                                                        else
                                                        {
                                                            @modelo.OperadorReg.Nombre
                                                        }
                                                    </td>
                                                    <td>
                                                        @modelo.TipoLlamada
                                                    </td>
                                                    <td>
                                                       @modelo.CategoriaLlamada
                                                    </td>
                                                    <td>
                                                        @modelo.EstatusLlamada
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr role="1">
                                                <td colspan="13" class="text-center">No hay datos para mostrar</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>