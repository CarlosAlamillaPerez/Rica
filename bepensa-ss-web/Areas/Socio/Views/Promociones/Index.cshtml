@model List<ImagenesPromocionesDTO>

@{
    ViewData["Title"] = "Promociones";

    ViewBag.Vista = 7;
}

@section GoogleAnalytics
{
    <partial name="_googleAnalitycs" />
}

@section BepensaAnalytics
{
    <partial name="_BepensaAnalytics" />
}
<main>

    <div class="title">Promociones</div>

    @if (Model != null && Model.Count > 0)
    {
        foreach (var imagen in Model.Where(x => x.Tipo.Equals("web")))
        {
            <div class="d-flex text-center justify-content-center">
                <img src="@imagen.Url" class="d-lg-block d-md-none d-none w-100" alt="@imagen.Nombre" srcset="">
            </div>
        }

        foreach (var imagen in Model.Where(x => x.Tipo.Equals("fdeWeb")))
        {
            <div class="d-flex text-center justify-content-center">
                <img src="@imagen.Url" class="d-lg-block d-md-none d-none w-100" alt="@imagen.Nombre" srcset="">
            </div>
        }
    }
    else
    {
        <div class="text-center justify-content-center">
            <p class="frutales">No hay promociones</p>
        </div>
    }

    @* <img src="~/img/img-promociones@2x-tab.png" class="d-lg-none d-md-block d-none w-100" alt="" srcset=""> *@
</main>
