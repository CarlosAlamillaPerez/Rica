@section Scripts {
    <script type="text/javascript" nonce="@ViewBag.Nonce">
        $(document).ready(function () {
            var idPeriodo = $('#ddlPeriodoEdoCta').val();

            let headersActualizados = false;

            ActualizarEstadoDeCuenta(idPeriodo);

            $('#ddlPeriodoEdoCta').on('change', function () {
                ActualizarEstadoDeCuenta($(this).val());
            });

            function ActualizarEstadoDeCuenta(idPeriodo) {
                AbrirLoad();

                $.ajax({
                    url: '@Url.Action("ConsultarEdoCta", "EstadoCuenta", new { area = "Socio", idPeriodo = "__ID__" })'.replace('__ID__', idPeriodo),
                    type: 'GET',
                    success: function (data) {

                        if (data.exitoso) {
                            var result = data.data;

                            $('#SaldoAnterior').text(formatearMiles(result.saldoAnterior) + ' Pts.');
                            $('#AcumuladoActual').text(formatearMiles(result.acumuladoActual) + ' Pts.');
                            $('#PuntosDisponibles').text(formatearMiles(result.puntosDisponibles) + ' Pts.');
                            $('#PuntosCanjeados').text(formatearMiles(result.puntosCanjeados) + ' Pts.');

                            var conceptos = result.conceptosAcumulacion;

                            $.ajax({
                                url: '@Url.Action("ConceptosAcumulacion", "EstadoCuenta", new { area = "Socio" })',
                                type: 'POST',
                                contentType: 'application/json',
                                dataType: 'html',
                                data: JSON.stringify(conceptos),
                                success: function (partialViewHtml) {
                                    $('#ConceptosAcumulacion').html(partialViewHtml);
                                },
                                error: function (xhr, status, error) {
                                    console.error('Error al cargar el partial view:', error);
                                }
                            });
                        }

                        CerrarLoad();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error al actualizar la vista parcial:', error);

                        console.log('XHR:', xhr.responseText);
                        CerrarLoad();
                    }
                });
            }
        });
    </script>
    <script type="text/javascript" nonce="@ViewBag.Nonce">
        $(document).ready(function () {
            var idPeriodo = $('#ddlPeriodoCanjes').val();

            ActualizarCanjes(idPeriodo);

            $('#ddlPeriodoCanjes').on('change', function () {
                var idPeriodo = $(this).val();

                ActualizarCanjes(idPeriodo);
            });

            function ActualizarCanjes(idPeriodo) {
                AbrirLoad();
                $.ajax({
                    url: '@Url.Action("ConsultarCanjes", "EstadoCuenta", new { area = "Socio", idPeriodo = "__ID__" })'.replace('__ID__', idPeriodo),
                    type: 'GET',
                    success: function (data) {
                        if (data.exitoso) {

                            let result = data.data;

                            $('#AcumuladoActualCanje').text(formatearMiles(result.acumuladoActual) + ' Pts.');
                            $('#PuntosCanjeadosCanje').text(formatearMiles(result.puntosCanjeados) + ' Pts.');
                            $('#CanjesRealizadosCanje').text(result.canjesRealizados);

                            $.ajax({
                                url: '@Url.Action("ListaCanjes", "EstadoCuenta", new { area = "Socio" })',
                                type: 'POST',
                                contentType: 'application/json',
                                dataType: 'html',
                                data: JSON.stringify(result.canjes),
                                success: function (partialViewHtml) {
                                    $('#canjeEstadoDeCuenta').html(partialViewHtml);
                                },
                                error: function (xhr, status, error) {
                                    console.error('Error al cargar el partial view:', error);
                                }
                            });
                        }

                        CerrarLoad();
                    },
                    error: function (xhr, status, error) {
                        console.error('Error al actualizar la vista parcial:', error);

                        CerrarLoad();
                    }
                });
            }
        });

        function VerEstatus(boton, idRedencion) {
            $(boton).prop("disabled", true);
            AbrirLoad();

            $.ajax({
                url: '@Url.Action("SeguimientoDeEstatus", "EstadoCuenta", new { area = "EstadoCuenta", idRedencion = "__ID__" })'.replace('__ID__', idRedencion),
                type: 'GET',
                success: function (data) {
                    $('#modalDeEstatus').html(data);

                    CerrarLoad();

                    $('#seguimientoRedencion').modal('show');

                    setTimeout(function () {
                        $(boton).prop("disabled", false);
                    }, 2000);
                },
                error: function (xhr, status, error) {
                    console.error('Error al actualizar la vista parcial:', error);

                    setTimeout(function () {
                        $(boton).prop("disabled", false);
                    }, 2000);

                    CerrarLoad();
                }
            });
        }

        function DetalleDeCanje(boton, idRedencion) {
            $(boton).prop("disabled", true);
            AbrirLoad();

            $.ajax({
                url: '@Url.Action("DetalleDeCanje", "EstadoCuenta", new { area = "EstadoCuenta", idRedencion = "__ID__" })'.replace('__ID__', idRedencion),
                type: 'GET',
                success: function (data) {
                    //Validar si es ecitos abrir detalle, de lo contrario mostrar modal de error

                    $('#modalDetalle').html(data);


                    CerrarLoad();

                    $('#canjedetalle').modal('show');

                    setTimeout(function () {
                        $(boton).prop("disabled", false);
                    }, 2000);
                },
                error: function (xhr, status, error) {
                    console.error('Error al actualizar la vista parcial:', error);
                    setTimeout(function () {
                        $(boton).prop("disabled", false);
                    }, 2000);

                    CerrarLoad();
                }
            });
        }
    </script>
