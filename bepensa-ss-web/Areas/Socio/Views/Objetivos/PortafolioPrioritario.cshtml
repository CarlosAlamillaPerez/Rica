@model List<DetallePortafolioPrioritarioDTO>

@{
    ViewData["Title"] = "Portafolio prioritario";

    var listaColores = new List<(string Key, string Value)>
        {
            ("#f40000", ".colas"),
            ("#222", "sinazucar"),
            ("#ff8300", "frutales"),
            ("#0086CC", "hidratacion"),
            ("#05a451", "nutricion")
        };
}

<main>
    <div class="container">
        <div class="row align-items-center justify-content-center py-1">
            <div class="col-lg-4 order-lg-1 order-md-2 order-2">
                <p class="text-center m-0 font-13px">Da clic en la <b>categoría</b> que deseas consultar.</p>
            </div>
            <div class="col-lg-3 order-lg-2 order-md-1 order-1">
                <div class="title m-0 p-0">Portafolio Prioritario</div>
            </div>
            <div class="col-lg-4 order-lg-3 order-md-3 order-3">
                <p class="text-center m-0 font-13px">Da clic en el <b>mes</b> que deseas consultar.</p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row g-3">
            @if (Model != null && Model.Count > 0)
            {
                var primerElemento = true;
                var subPrimerelemento = true;
                var primerDetalle = true;
                int contador = 1;


                @foreach (var detalle in Model)
                {
                    subPrimerelemento = true;
                    var mes = detalle.Fecha.ToString("MMMM").ToLower();

                    <div class="col-lg-6 mes-categoria" id="@mes" style="@(primerElemento != true ? "display: none;" : "")">
                        <ul class="nav nav-pills mb-3 justify-content-center" id="cat-pills-tab-@mes" role="tablist">

                            @foreach (var pp in detalle.PortafolioPrioritario)
                            {
                                var subConcepto = pp.Nombre.ToLower().Replace(" ", "").Replace("ú", "u").Replace("ó", "o");

                                <li class="nav-item @(listaColores.Where(x => x.Key == pp.FondoColor).Select(x => x.Value).FirstOrDefault() ?? "colas")" role="presentation">
                                    <button class="nav-link  @(subPrimerelemento ? "active" : "") pills-button-cat"
                                            id="pills-@subConcepto-tab-@mes"
                                            data-bs-toggle="pill"
                                            data-bs-target="#pills-@subConcepto-@mes"
                                            type="button" role="tab" aria-controls="pills-@subConcepto-@mes"
                                            aria-selected="@(subPrimerelemento ? "true" : "false")">
                                        @pp.Nombre
                                    </button>
                                </li>

                                subPrimerelemento = false;
                                primerElemento = false;
                            }

                            @* <li class="nav-item colas" role="presentation">
                    <button class="nav-link active" id="pills-colas-tab" data-bs-toggle="pill" data-bs-target="#pills-colas" type="button" role="tab" aria-controls="pills-colas" aria-selected="true">Colas</button>
                    </li> *@

                        </ul>
                        @{
                            primerDetalle = true;
                        }
                        <div class="tab-content" id="pills-tabContent-cat">
                            @foreach (var pp in detalle.PortafolioPrioritario)
                            {
                                mes = detalle.Fecha.ToString("MMMM").ToLower();

                                contador = 1;
                                var subConcpt = pp.Nombre.ToLower().Replace(" ", "").Replace("ú", "u").Replace("ó", "o");

                                <div class="tab-pane fade @(primerDetalle ? "show active" : "")" id="pills-@subConcpt-@mes" role="tabpanel" aria-labelledby="pills-@subConcpt-tab-@mes">
                                    <div class="table-responsive">
                                        <table class="table table-striped text-center font-13px">
                                            <thead>
                                                <tr class="text-white" style="background-color: @(pp.FondoColor ?? "#F40000");">
                                                    <th scope="col" class="font-13px text-white">Número</th>
                                                    <th scope="col" class="font-13px text-white">Presentación</th>
                                                    <th scope="col" class="font-13px text-white">¿Lo compraste?</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var subConcepto in pp.CumplimientoPortafolio)
                                                {
                                                    <tr>
                                                        <td>@contador</td>
                                                        <td>@subConcepto.Nombre</td>
                                                        @if (subConcepto.Cumple)
                                                        {
                                                            <td><img src="~/img/general/icn-paloma.svg" width="25" alt="" srcset=""></td>
                                                        }
                                                        else
                                                        {
                                                            <td class="text-primary">Falta</td>
                                                        }
                                                    </tr>
                                                    contador++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                primerDetalle = false;
                            }
                        </div>
                    </div>
                }

                <div class="col-lg-6">
                    <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
                        @{
                            primerElemento = true;
                        }

                        @foreach (var detalle in Model)
                        {
                            var mes = detalle.Fecha.ToString("MMMM").ToLower();

                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(detalle.Porcentaje >= 100 ? "positivo" : "")  @(primerElemento ? "active" : "") pills-button"
                                        id="pills-@mes-tab"
                                        data-bs-toggle="pill"
                                        data-bs-target=".pills-@mes"
                                        data-mostrar="#@mes"
                                        type="button" role="tab" aria-controls="pills-@mes"
                                        aria-selected="@(primerElemento ? "true" : "false")">
                                    @detalle.Fecha.ToString("MMM", new CultureInfo("es-ES")).ToUpper()<br>@detalle.Porcentaje %
                                </button>
                            </li>

                            primerElemento = false;
                        }
                    </ul>

                    @{
                        primerDetalle = true;
                    }

                    <div class="tab-content" id="pills-tabContent">
                        @foreach (var detalle in Model)
                        {
                            var mes = detalle.Fecha.ToString("MMMM").ToLower();

                            <div class="tab-pane fade @(primerDetalle ? "show active" : "") pills-@mes" role="tabpanel" aria-labelledby="pills-@mes-tab">
                                <div class="card-white">
                                    <div class="titulo">Portafolio Prioritario <b>@detalle.Fecha.ToString("MMMM", new CultureInfo("es-ES"))</b></div>
                                    <div class="row text-center align-items-start justify-content-center g-3">
                                        @foreach (var botella in detalle.PortafolioPrioritario)
                                        {
                                            <div class="col-md-2 col-auto d-flex flex-column align-items-center justify-content-center text-center">
                                                <div class="d-flex justify-content-center align-items-center position-relative" style="max-width: 60px; max-height: 180px;">
                                                    @{
                                                        var modelo = new BotellaGeneral() { Porcentaje = botella.Porcentaje, FondoColor = botella.FondoColor ?? "#F40000" };
                                                    }
                                                    @if (botella.Nombre.Contains("Frutales"))
                                                    {
                                                        <partial name="_botellaNaranja" model="modelo" />
                                                    }
                                                    else if (botella.Nombre.Contains("Hidratación"))
                                                    {
                                                        <partial name="_botellaAzul" model="modelo" />
                                                    }
                                                    else if (botella.Nombre.Contains("Colas sin azúcar"))
                                                    {
                                                        <partial name="_botellaNegra" model="modelo" />
                                                    }
                                                    else if (botella.Nombre.Contains("Nutrición"))
                                                    {
                                                        <partial name="_botellaVerde" model="modelo" />
                                                    }
                                                    else
                                                    {
                                                        <partial name="_botellaRoja" model="modelo" />
                                                    }
                                                </div>
                                                <h5 class="rounded-pill text-white mt-1 px-4px" style="background-color: @(botella.FondoColor ?? "#F40000");">@botella.Porcentaje%</h5>

                                                <b class="font-12px" style="color: @(botella.FondoColor ?? "#F40000")">@botella.Nombre</b>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            primerDetalle = false;
                        }
                    </div>

                </div>
            }
            else
            {
                <p>No hay portafolio asignado</p>
            }
        </div>
    </div>
</main>

@section Scripts {
    <script type="text/javascript" nonce="@ViewBag.Nonce">
        $(document).ready(function () {
            $('.pills-button').on('click', function () {
                var targetClass = $(this).data('mostrar');

                console.log(targetClass);
                $('.mes-categoria').hide();

                $(targetClass).show();
            });
        });
    </script>
}